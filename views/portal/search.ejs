<html>
    <!-- based on no-side bar template -->
    <%- include('../partials/head'); %>
    <body class="is-preload">
		<div id="page-wrapper">

			<!-- Header -->
			<%- include('../partials/header'); %>

			<!-- Main -->
				<section class="wrapper style1">
					<div class="container">
						<div id="content">
							<!-- Content -->
                            <article>
                                <header>
                                    <h2><%= webcontent.search.introduction %></h2>
                                    <p>
                                        <b><%= webcontent.search.note1 %>:</b> <%= webcontent.search.note2 %>
                                    </p>
                                </header>
                                <form method="POST" action="/portal/searchresults">
                                    <div class="row gtr-50">
                                        <div class="col-12">
                                            <input type="text" name="textsearch" id="textsearch" maxlength="255" placeholder="<%= webcontent.search.note2 %>" value="" />
                                            <br/>
                                            <label class="container2"><%= webcontent.search.option1 %>
                                                <input type="radio" name="searchtype">
                                                <span class="checkmark"></span>
                                            </label>
                                            <label class="container2"><%= webcontent.search.option2 %>
                                                <input type="radio" name="searchtype">
                                                <span class="checkmark"></span>
                                            </label>
                                            <label class="container2"><%= webcontent.search.option3 %>
                                                <input type="radio" name="searchtype">
                                                <span class="checkmark"></span>
                                            </label>
                                            <p></p> 
                                            <a href="#" onclick="ShowAdvancedOptions();return false;"><%= webcontent.search.advanced %>&nbsp;&nbsp;<img id="AdvancedOptionsImage"  name="AdvancedOptionsImage" src="../images/plus_blue16b.png" alt="<%= webcontent.search.advanced %>" style="vertical-align: middle; display: inline-block;"/></a>
                                            <hr id='AdvancedOptionshr' name='AdvancedOptionshr' style='display: none;'/>
                                        </div>
                                        <div class="col-6 col-12-mobilep" id='AdvancedOptions1' name='AdvancedOptions1' style='display: none;'>
                                            <%= webcontent.search.priority %><br/>
                                            <% let i=1 %>
                                            <% webcontent.Recommendation.Priority.split("|").forEach(function(item) { -%>
                                                <label class="container1"><%= item %>
                                                    <input type="checkbox">
                                                    <span class="checkmark"></span>
                                                </label>
                                                <% i++ %> 
                                            <% }) -%>         
                                            <br/>
                                            <%= webcontent.search.riskareas %><br/>
                                            <% i=1 %>
                                            <% webcontent.Recommendation.RiskCharacterization.split("|").forEach(function(item) { -%>
                                                <label class="container1"><%= item %>
                                                    <input type="checkbox">
                                                    <span class="checkmark"></span>
                                                </label>
                                                <% i++ %> 
                                            <% }) -%>         
                                            <br/>
                                            <%= webcontent.search.rectype %><br/>
                                            <% i=1 %>
                                            <% webcontent.Recommendation.RiskEvaluation.split("|").forEach(function(item) { -%>
                                                <label class="container1"><%= item %>
                                                    <input type="checkbox">
                                                    <span class="checkmark"></span>
                                                </label>
                                                <% i++ %> 
                                            <% }) -%>    
                                        </div>
                                        <div class="col-6 col-12-mobilep" id='AdvancedOptions2' name='AdvancedOptions2' style='display: none;'>
                                            <%= webcontent.search.recimportance %><br/>
                                            <% i=1 %>
                                            <% webcontent.Recommendation.Importance.split("|").forEach(function(item) { -%>
                                                <label class="container1"><%= item %>
                                                    <input type="checkbox">
                                                    <span class="checkmark"></span>
                                                </label>
                                                <% i++ %> 
                                            <% }) -%>     
                                            <br/>    
                                            <%= webcontent.search.status %><br/>
                                            <% i=1 %>
                                            <% webcontent.Recommendation.ImplementationStatus.split("|").forEach(function(item) { -%>
                                                <label class="container1"><%= item %>
                                                    <input type="checkbox">
                                                    <span class="checkmark"></span>
                                                </label>
                                                <% i++ %> 
                                            <% }) -%>         
                                            <br/>
                                            <%= webcontent.search.repeated %><br/>
                                            <% i=1 %>
                                            <% webcontent.Recommendation.Repeated.split("|").forEach(function(item) { -%>
                                                <label class="container1"><%= item %>
                                                    <input type="checkbox">
                                                    <span class="checkmark"></span>
                                                </label>
                                                <% i++ %> 
                                            <% }) -%>         
                                        </div>
                                        <div class="col-12">
                                            <ul class="actions">
                                                <li><input type="submit" class="button alt" value="<%= webcontent.search.button %>" /></li>
                                            </ul>
                                        </div>
                                    </div>
                                </form>
                            </article>
						</div>
					</div>
				</section>

			<!-- Footer -->
			<%- include('../partials/footer'); %>

		</div>
        <!-- javascript is placed in the body section -->
        <script>
            function ShowAdvancedOptions() {
                if (document.getElementById("AdvancedOptionshr").style.display == "none"){
                    document.getElementById("AdvancedOptionsImage").src='../images/minus_blue16b.png';
                    document.getElementById("AdvancedOptionshr").style.display = "block";
                    document.getElementById("AdvancedOptions1").style.display = "block";
                    document.getElementById("AdvancedOptions2").style.display = "block";
                } else {
                    document.getElementById("AdvancedOptionsImage").src='../images/plus_blue16b.png';
                    document.getElementById("AdvancedOptionshr").style.display = "none";
                    document.getElementById("AdvancedOptions1").style.display = "none";
                    document.getElementById("AdvancedOptions2").style.display = "none";
                }
            }
        </script>   

		<!-- Scripts -->
		<%- include('../partials/scripts'); -%>

	</body>
</html>