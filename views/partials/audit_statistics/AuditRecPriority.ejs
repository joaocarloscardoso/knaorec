<h1><%= webcontent.audit.priority %></h1>
<canvas id="chartjs-P" class="chartjs" width="undefined" height="undefined"></canvas>
<script>
    new Chart(document.getElementById("chartjs-P"),
    {
    "type":"horizontalBar",
    "data":{
        "labels":[
            <% let i=1 %>
            <% if (language == 'EN') { -%>
                <% data.StatPriorities.forEach(function(item) { -%>
                    <% if (i == 1) { -%>
                        "<%= item.Priority %>"
                    <% } else { %>
                        ,"<%= item.Priority %>"
                    <% } %>
                    <% i++ %>
                <% }) -%>
            <% } else { %>
                <%- '"' + webcontent.Recommendation.Priority.split('|').join('","') + '"' %>
            <% } %>
        ],
        "datasets":
            [
                {
                    <% if (language == 'EN') { -%>
                    "label":"Number",
                    <% } else { %>
                    "label":"<%= webcontent.main.number %>",
                    <% } %>
                    "data":[
                        <%  i=1 %>
                        <% data.StatPriorities.forEach(function(item) { -%>
                            <% if (i == 1) { -%>
                                <%= item.Number %>
                            <% } else { %>
                                ,<%= item.Number %>
                            <% } %>
                            <% i++ %>
                        <% }) -%>
                   ],
                    "fill":false,
                    "backgroundColor":[
                        <%  i=1 %>
                        <% data.StatPriorities.forEach(function(item) { -%>
                            <% if (i == 1) { -%>
                                "rgba(75, 192, 192, 0.2)"
                            <% } else { %>
                                ,"rgba(75, 192, 192, 0.2)"
                            <% } %>
                            <% i++ %>
                        <% }) -%>
                    ],
                    "borderColor":[
                        <%  i=1 %>
                        <% data.StatPriorities.forEach(function(item) { -%>
                            <% if (i == 1) { -%>
                                "rgb(75, 192, 192)"
                            <% } else { %>
                                ,"rgb(75, 192, 192)"
                            <% } %>
                            <% i++ %>
                        <% }) -%>
                    ],
                    "borderWidth":1
                }
            ]
        },
        "options":{
            "scales":
                {
                    "xAxes":[{"ticks":{"beginAtZero":true}}]
                }
        }
    });
</script>
