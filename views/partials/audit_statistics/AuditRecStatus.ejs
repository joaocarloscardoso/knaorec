<h1><%= webcontent.audit.status %></h1>
<canvas id="chartjs-Status" class="chartjs" width="undefined" height="undefined"></canvas>
<script>
    new Chart(document.getElementById("chartjs-Status"),
    {
    "type":"horizontalBar",
    "data":{
        "labels":[
            <%- '"' + data.status_label.split('|').join('","') + '"' %>
        ],
        "datasets":
            [
                {
                    <% if (language == 'EN') { -%>
                    "label":"Number",
                    <% } else { %>
                    "label":"<%= webcontent.main.number %>",
                    <% } %>
                    "data":[
                        <% colStat =  data.status_label.split(" ").join("_").split("|") -%>
                        <% for (var i=0; i<colStat.length; i++) { -%>
                            <% if (i == 0) { -%>
                                <%= data.StatStatus[colStat[i]] %>
                            <% } else { %>
                                ,<%= data.StatStatus[colStat[i]] %>
                            <% } %>
                        <% } -%>  
                    ],
                    "fill":false,
                    "backgroundColor":[
                        <% for (var i=0; i<colStat.length; i++) { -%>
                            <% if (i == 0) { -%>
                                "<%= colors[i] %>"
                            <% } else { %>
                                ,"<%= colors[i] %>"
                            <% } %>
                        <% } -%>  
                    ],
                    "borderColor":[
                        <% for (var i=0; i<colStat.length; i++) { -%>
                            <% if (i == 0) { -%>
                                "<%= colors[i] %>"
                            <% } else { %>
                                ,"<%= colors[i] %>"
                            <% } %>
                        <% } -%>  
                    ],
                    "borderWidth":1
                }
            ]
        },
        "options":{
            "scales":
                {
                    "xAxes":[{"ticks":{"beginAtZero":true}}]
                }
        }
    });
</script>
