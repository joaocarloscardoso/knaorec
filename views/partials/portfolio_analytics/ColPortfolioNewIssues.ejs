<h1><%= webcontent.portfolio.newissues %></h1>
<canvas id="chartjs-Rrepetead" class="chartjs" width="undefined" height="undefined"></canvas>
<script>
    new Chart(document.getElementById("chartjs-Rrepetead"),
    {
    "type":"horizontalBar",
    "data":{
        "labels":[
            <% if (language == 'EN') { -%>
            'Total','New', 'Repeated', 'Partially Rep.'
            <% } else { %>
            <%- '"' + webcontent.Recommendation.Repeated.split('|').join('","') + '"' %>    
            <% } %>
        ],
        "datasets":
            [
                {
                    <% if (language == 'EN') { -%>
                    "label":"Number",
                    <% } else { %>
                    "label":"<%= webcontent.main.number %>",
                    <% } %>
                    "data":[
                        <%= catalogStat.repeated_data.No + catalogStat.repeated_data.Yes + catalogStat.repeated_data.Partially %>,
                        <%= catalogStat.repeated_data.No %>,
                        <%= catalogStat.repeated_data.Yes %>,
                        <%= catalogStat.repeated_data.Partially %>
                    ],
                    "fill":false,
                    "backgroundColor":[
                        "rgba(255, 99, 132, 0.2)",
                        "rgba(54, 162, 235, 0.2)",
                        "rgba(255, 159, 64, 1)",
                        "rgba(25, 159, 64, 1)"
                    ],
                    "borderColor":[
                        "rgba(255, 99, 132, 0.2)",
                        "rgba(54, 162, 235, 0.2)",
                        "rgba(255, 159, 64, 1)",
                        "rgba(25, 159, 64, 1)"
                    ],
                    "borderWidth":1
                }
            ]
        },
        "options":{
            "scales":
                {
                    "xAxes":[{"ticks":{"beginAtZero":true}}]
                }
        }
    });
</script>
